// Place your settings in this file to overwrite default and user settings.
{
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#0082eb",
        "activityBar.activeBorder": "#9f0058",
        "activityBar.background": "#0082eb",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#9f0058",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#0066b8",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#0082eb",
        "titleBar.activeBackground": "#0066b8",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#0066b899",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#0066B8"
}