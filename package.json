{
	"name": "do-authoring-toolkit",
	"displayName": "do-authoring-toolkit",
	"description": "Extension to help with the DigitalOcean authoring experience within VSCode.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": ["onLanguage:markdown"],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "DigitalOcean Community Authoring Toolkit",
			"properties": {
				"docoat.enabled": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "Enable or disable the entire extension."
				},
				"docoat.enabledPatterns": {
					"type": ["array", "null"],
					"default": null,
					"markdownDescription": "List of globs to enable the extension for"
				}
			}
		},
		"markdown.markdownItPlugins": true,
		"commands": [
			{
				"command": "do-authoring-toolkit.rebuildCss",
				"title": "DOCO Toolkit: Rebuild Preview CSS"
			}
		],
		"markdown.previewStyles": [
			"./do-md.css"
		],
		"snippets": [
			{
				"language": "markdown",
				"path": "./snippets/markdown.code-snippets"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"build:css": "ts-node --transpile-only ./scripts/css-gen.ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"fix": "prettier --write src/**/*.ts",
		"lint": "eslint src --ext ts && prettier --check src",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/markdown-it": "^12.0.2",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/node-fetch": "^2.5.10",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"markdown-it-do-co-pack": "file:.yalc/markdown-it-do-co-pack",
		"node-fetch": "^2.6.1"
	}
}
